<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/inputTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gridlayout"
        android:layout_gravity="end"
        android:layout_marginStart="@dimen/dim_20"
        android:layout_marginLeft="@dimen/dim_10"
        android:layout_marginTop="@dimen/dim_20"
        android:layout_marginEnd="@dimen/dim_26"
        android:layout_marginBottom="@dimen/dim_20"
        android:gravity="end"
        android:hint="0"
        android:inputType="none"
        android:textSize="@dimen/dim_40" />

    <GridLayout

        android:id="@+id/gridlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:columnCount="4"
        android:rowCount="5">

        <!-- Digits -->
        <Button
            android:id="@+id/btn1"
            android:onClick="onDigitClick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/dim_10"
            android:layout_marginBottom="@dimen/dim_25"
            android:backgroundTint="@color/white"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_22" />

        <Button
            android:id="@+id/btn2"
            android:onClick="onDigitClick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/dim_10"
            android:layout_marginBottom="@dimen/dim_25"
            android:backgroundTint="@color/white"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_22" />

        <Button
            android:id="@+id/btn3"
            android:onClick="onDigitClick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/dim_10"
            android:layout_marginBottom="@dimen/dim_25"
            android:backgroundTint="@color/white"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_22" />

        <Button
            android:id="@+id/btn4"
            android:onClick="onDigitClick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/dim_10"
            android:layout_marginBottom="@dimen/dim_25"
            android:backgroundTint="@color/white"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_22" />

        <Button
            android:id="@+id/btn5"
            android:onClick="onDigitClick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/dim_10"
            android:layout_marginBottom="@dimen/dim_25"
            android:backgroundTint="@color/white"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_22" />

        <Button
            android:id="@+id/btn6"
            android:onClick="onDigitClick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/dim_10"
            android:layout_marginBottom="@dimen/dim_25"
            android:backgroundTint="@color/white"
            android:text="6"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_22" />

        <Button
            android:id="@+id/btn9"
            android:onClick="onDigitClick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/dim_10"
            android:layout_marginBottom="@dimen/dim_25"
            android:backgroundTint="@color/white"
            android:text="9"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_22" />

        <Button
            android:id="@+id/btn8"
            android:onClick="onDigitClick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/dim_10"
            android:layout_marginBottom="@dimen/dim_25"
            android:backgroundTint="@color/white"
            android:text="8"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_22" />

        <Button
            android:id="@+id/btn7"
            android:onClick="onDigitClick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/dim_10"
            android:layout_marginBottom="@dimen/dim_25"
            android:backgroundTint="@color/white"
            android:text="7"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_22" />

        <!-- Operators -->
        <Button
            android:id="@+id/btn0"
            android:onClick="onDigitClick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/dim_10"
            android:layout_marginBottom="@dimen/dim_40"
            android:backgroundTint="@color/white"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_22" />

        <Button
            android:id="@+id/btnDot"
            android:onClick="onDigitClick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/dim_10"
            android:layout_marginBottom="@dimen/dim_40"
            android:backgroundTint="@color/white"
            android:text="."
            android:textColor="@color/black"
            android:textSize="@dimen/dim_22" />

        <Button
            android:id="@+id/btnPlus"
            android:onClick="onOperatorClick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/dim_10"
            android:layout_marginBottom="@dimen/dim_25"
            android:backgroundTint="@color/white"
            android:text="+"
            android:textColor="@color/orange"
            android:textSize="@dimen/dim_27" />

        <Button
            android:id="@+id/btnMinus"
            android:onClick="onOperatorClick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/dim_10"
            android:layout_marginBottom="@dimen/dim_25"
            android:backgroundTint="@color/white"
            android:text="-"
            android:textColor="@color/orange"
            android:textSize="@dimen/dim_27" />

        <Button
            android:id="@+id/btnDivide"
            android:onClick="onOperatorClick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/dim_10"
            android:layout_marginBottom="@dimen/dim_25"
            android:backgroundTint="@color/white"
            android:text="/"
            android:textColor="@color/orange"
            android:textSize="@dimen/dim_27" />

        <Button
            android:id="@+id/btnPercentage"
            android:onClick="onPercentClicks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/dim_10"
            android:layout_marginBottom="@dimen/dim_25"
            android:backgroundTint="@color/white"
            android:text="%"
            android:textColor="@color/orange"
            android:textSize="@dimen/dim_25" />

        <!-- Other functionalities -->
        <Button
            android:id="@+id/btnplusminus"
            android:onClick="onDigitClick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/dim_10"
            android:layout_marginBottom="@dimen/dim_40"
            android:backgroundTint="@color/white"
            android:text="+/-"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_22" />

        <Button
            android:onClick="onBackspaceClick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/dim_10"
            android:layout_marginBottom="@dimen/dim_25"
            android:backgroundTint="@color/white"
            android:text="C"
            android:textColor="@color/orange"
            android:textSize="@dimen/dim_22" />

        <Button
            android:id="@+id/btnEqual"
            android:onClick="onEqualClick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/dim_10"
            android:layout_marginBottom="@dimen/dim_40"
            android:backgroundTint="@color/orange"
            android:text="="
            android:textColor="@color/white"
            android:textSize="@dimen/dim_22"
            app:cornerRadius="300dp" />

        <Button
            android:id="@+id/btnMultiply"
            android:onClick="onOperatorClick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:layout_marginBottom="@dimen/dim_25"
            android:backgroundTint="@color/white"
            android:text="X"
            android:textColor="@color/orange"
            android:textSize="@dimen/dim_22" />

        <Button
            android:onClick="onClearClick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:layout_marginBottom="@dimen/dim_25"
            android:backgroundTint="@color/white"
            android:text="AC"
            android:textColor="@color/orange"
            android:textSize="@dimen/dim_22" />
    </GridLayout>


</RelativeLayout>
